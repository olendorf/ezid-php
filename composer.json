{
    "name": "olendorf/ezid-php",
    "description": "A library to simplify interacting with the EZID API for managing DOIs and ARKs.",
    "type": "library",
    "keywords": ["DOI", "ARK", "API", "rest", "client", "HTTP client"],
    "homepage": "https://github.com/olendorf/ezid-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Olendorf",
            "email": "drolendorf@gmail.com"
        }
    ],
    "require": {
      "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "bossa/phpspec2-expect": "*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {"psr-0": {"ezid\\": "src/"}},
    "autoload": {"psr-4": {"ezid\\": "spec/"}}
}